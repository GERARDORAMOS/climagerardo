<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:foregroundGravity="center_vertical"
    tools:context="com.ramos.gerardo.clima_api.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/negrotrans"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_Temperatura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/image_iconoClima"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_toRightOf="@+id/image_iconoClima"
                android:gravity="center"
                android:text="0ยบ"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_light"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/t_cent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/image_iconoClima"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_toRightOf="@+id/image_iconoClima"
                android:gravity="center"
                android:text="0ยบ"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_light"
                android:textIsSelectable="false"
                android:textSize="70dp"
                android:typeface="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_iconoClima"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/tormenta"
                    android:foregroundGravity="center_horizontal"
                    android:maxHeight="150dp"
                    android:maxWidth="150dp"
                    android:minHeight="150dp"
                    android:minWidth="150dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:id="@+id/t_EstadoClima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_Temperatura"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_light"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/t_Ciudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/t_Pais"
                android:layout_centerHorizontal="true"
                android:singleLine="false"
                android:textColor="@android:color/background_light"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
